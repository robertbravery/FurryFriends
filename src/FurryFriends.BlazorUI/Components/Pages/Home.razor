@page "/"


<div class="home-container">
    <PageTitle>FurryFriends - Connect with Local Pet Care Professionals</PageTitle>

    <!-- Hero Section -->
    <section class="hero-section">
        <h1>Find Trusted Pet Care Professionals Near You</h1>
        <p class="hero-subtitle">Connect instantly with verified, insured pet walkers in your neighborhood</p>
        <div class="hero-buttons">
            <a href="/find-walker" class="btn btn-primary">Find a Pet Walker</a>
            <a href="/become-walker" class="btn btn-outline">Become a Pet Walker</a>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="process-section">
        <h2>How It Works</h2>
        <div class="process-steps">
            <div class="step-card">
                <span class="step-icon">📍</span>
                <h3>Enter Your Location</h3>
                <p>Find available pet care professionals in your neighborhood</p>
            </div>
            <div class="step-card">
                <span class="step-icon">👤</span>
                <h3>Choose Your Walker</h3>
                <p>Browse profiles, reviews, and rates to find your perfect match</p>
            </div>
            <div class="step-card">
                <span class="step-icon">📅</span>
                <h3>Book Instantly</h3>
                <p>Schedule a one-time visit or recurring walks with secure payment</p>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-section">
        <h2>Available Services</h2>
        <div class="service-cards">
            <div class="service-card">
                <span class="service-icon">🦮</span>
                <h3>On-Demand Walks</h3>
                <p>Book a trusted walker for same-day service when you're busy</p>
            </div>
            <div class="service-card">
                <span class="service-icon">🏠</span>
                <h3>In-Home Pet Sitting</h3>
                <p>Schedule overnight stays or daily check-ins while you're away</p>
            </div>
            <div class="service-card">
                <span class="service-icon">📆</span>
                <h3>Recurring Walks</h3>
                <p>Set up regular walks with your favorite pet care professional</p>
            </div>
        </div>
    </section>

    <!-- Trust Section -->
    <section class="features-section">
        <h2>Your Peace of Mind is Our Priority</h2>
        <div class="features-grid">
            <div class="feature-item">
                <span class="feature-icon">🔍</span>
                <h4>Verified Walkers</h4>
                <p>Background-checked and thoroughly vetted professionals</p>
            </div>
            <div class="feature-item">
                <span class="feature-icon">💳</span>
                <h4>Secure Booking</h4>
                <p>Easy scheduling and secure payment processing</p>
            </div>
            <div class="feature-item">
                <span class="feature-icon">📱</span>
                <h4>Real-time Updates</h4>
                <p>GPS tracking and photo updates during each visit</p>
            </div>
            <div class="feature-item">
                <span class="feature-icon">⭐</span>
                <h4>Rated & Reviewed</h4>
                <p>Choose walkers based on verified customer reviews</p>
            </div>
        </div>
    </section>

    <!-- Walker Callout Section -->
    <section class="walker-callout">
        <div class="callout-content">
            <h2>Are You a Pet Care Professional?</h2>
            <p>Join our network of trusted pet walkers. Set your own schedule and rates.</p>
            <ul class="walker-benefits">
                <li>✓ Flexible schedule</li>
                <li>✓ Set your service area</li>
                <li>✓ Choose your clients</li>
                <li>✓ Earn competitive rates</li>
            </ul>
            <a href="/walker-signup" class="btn btn-outline">Start Earning Today</a>
        </div>
    </section>

    <!-- Call to Action -->
    <section class="cta-section">
        <h2>Ready to Find Your Perfect Pet Walker?</h2>
        <p>Join thousands of pet owners who trust FurryFriends for reliable, on-demand pet care</p>
        <div class="cta-buttons">
            <a href="/register" class="btn btn-primary btn-large">Get Started</a>
            <a href="/search-walkers" class="btn btn-outline btn-large">Browse Pet Walkers</a>
        </div>
    </section>
</div>
